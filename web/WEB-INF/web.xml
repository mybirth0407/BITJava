<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                            http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- TableServlet -->
    <servlet>
        <servlet-name>table-servlet</servlet-name>
        <servlet-class>bitservlet.TableServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>table-servlet</servlet-name>
        <url-pattern>/bitservlet/TableServlet</url-pattern>
    </servlet-mapping>
    <!-- -->

    <!-- EmailListServlet -->
    <servlet>
        <servlet-name>emaillist-servlet</servlet-name>
        <servlet-class>emaillist.EmailListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>emaillist-servlet</servlet-name>
        <url-pattern>/bitservlet/emaillist/EmailListServlet</url-pattern>
    </servlet-mapping>
    <!-- -->

    <!-- GuestBookServlet -->
    <servlet>
        <servlet-name>guestbook-servlet</servlet-name>
        <servlet-class>guestbook.GuestBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>guestbook-servlet</servlet-name>
        <url-pattern>/bitservlet/guestbook/GuestBookServlet</url-pattern>
    </servlet-mapping>
    <!-- -->

</web-app>
